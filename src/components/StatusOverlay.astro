<div class="stats-overlay">
  <div class="stat-item">
    <div class="stat-icon"></div>
    <span>500+ Projects Delivered</span>
  </div>
  <div class="stat-item">
    <div class="stat-icon"></div>
    <span>98% Client Satisfaction</span>
  </div>
