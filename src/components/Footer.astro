---
const socialLinks = [
  {
    name: "LinkedIn",
    url: "https://linkedin.com/company/monkeycitystudios",
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M16 8A6 6 0 0 1 22 14V21H18V14A2 2 0 0 0 14 14A2 2 0 0 0 12 16V21H8V14A6 6 0 0 1 16 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <rect x="2" y="9" width="4" height="12" stroke="currentColor" stroke-width="2"/>
      <circle cx="4" cy="4" r="2" stroke="currentColor" stroke-width="2"/>
    </svg>`
  },
  {
    name: "GitHub",
    url: "https://github.com/monkeycitystudios",
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M9 19C4 20.5 4 16.5 2 16M22 16V22A2 2 0 0 1 20 24H4A2 2 0 0 1 2 22V16M22 16L20 14L18 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M9 9V12A3 3 0 0 0 12 15A3 3 0 0 0 15 12V9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`
  },
  {
    name: "Twitter",
    url: "https://twitter.com/monkeycitystudios",
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M23 3A10.9 10.9 0 0 1 20.1 4.7A4.48 4.48 0 0 0 22.5 2A9 9 0 0 1 19.8 3.3A4.48 4.48 0 0 0 12.4 7.17A12.94 12.94 0 0 1 3 4S-1 13 8 17A13.11 13.11 0 0 1 0 19C9 24 20 19 20 7.77A9 9 0 0 0 23 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`
  },
  {
    name: "Email",
    url: "mailto:info@monkeycitystudios.com",
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`
  }
];

const footerLinks = [
  { name: "Home", url: "/" },
  { name: "Services", url: "#services" },
  { name: "Tech Stack", url: "#tech-stack" },
  { name: "Contact", url: "/contact" },
  { name: "Privacy Policy", url: "/privacy" }
];
---
<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <div class="footer-logo">
          <img src="/assets/images/logo.png" alt="Monkey City Studios" class="logo-img" />
          <span class="logo-text">MONKEY CITY STUDIO</span>
        </div>
        <p class="footer-description">
          Transforming ambitious ideas into powerful software solutions. 
          Your partner in digital innovation.
        </p>
      </div>

      <div class="footer-section">
        <h3>Quick Links</h3>
        <nav class="footer-nav">
          <ul>
            {footerLinks.map(link => (
              <li><a href={link.url}>{link.name}</a></li>
            ))}
          </ul>
        </nav>
      </div>

      <div class="footer-section">
        <h3>Connect With Us</h3>
        <div class="social-links">
          {socialLinks.map(social => (
            <a href={social.url} class="social-link" aria-label={social.name} target="_blank" rel="noopener noreferrer">
              <span set:html={social.icon}></span>
            </a>
          ))}
        </div>
        <div class="contact-info">
          <p>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            info@monkeycitystudios.com
          </p>
          <p>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M22 16.92V19A2 2 0 0 1 20.11 21A19.79 19.79 0 0 1 2 5.89A2 2 0 0 1 4 4H7.08A2 2 0 0 1 9 5.5L10.5 9A2 2 0 0 1 10 11.76L8.5 13.5A16 16 0 0 0 10.5 15.5A16 16 0 0 0 12.24 13L13.76 11.5A2 2 0 0 1 16 10.5L19.5 9A2 2 0 0 1 21 11.08V16.92Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            +1 (234) 567-890
          </p>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; 2025 Monkey City Studios. All rights reserved.</p>
      <p>Built with ❤️ and cutting-edge technology</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    color: white;
    padding: 4rem 0 2rem;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section h3 {
    color: #3b82f6;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .footer-section h3::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 2rem;
    height: 2px;
    background: linear-gradient(90deg, #3b82f6, #1d4ed8);
    border-radius: 1px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .logo-img {
    width: 40px;
    height: 40px;
    border-radius: 8px;
  }

  .logo-text {
    font-weight: 700;
    font-size: 1.1rem;
    color: white;
  }

  .footer-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .footer-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-nav li {
    margin-bottom: 0.75rem;
  }

  .footer-nav a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-nav a:hover {
    color: #3b82f6;
    transform: translateX(5px);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .social-link {
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .social-link:hover {
    background: #3b82f6;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
  }

  .contact-info p {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.75rem;
    font-size: 0.95rem;
  }

  .contact-info svg {
    flex-shrink: 0;
    opacity: 0.7;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    text-align: center;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-bottom p {
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 2rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-logo {
      justify-content: center;
    }

    .social-links {
      justify-content: center;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .contact-info p {
      justify-content: center;
    }
  }
</style>